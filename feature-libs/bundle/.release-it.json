{
  "git": {
    "requireCleanWorkingDir": true,
    "requireUpstream": false,
    "tagName": "bundle-${version}",
    "commitMessage": "Bumping bundle version to ${version}",
    "tagAnnotation": "Bumping bundle version to ${version}"
  },
  "npm": {
    "publishPath": "./../../dist/bundle"
  },
  "hooks": {
    "after:version:bump": "cd ../.. && yarn build:bundle"
  },
  "github": {
    "release": true,
    "assets": ["../../docs.tar.gz", "../../docs.zip"],
    "releaseName": "@spartacus/bundle@${version}",
    "releaseNotes": "ts-node ../../scripts/changelog.ts --verbose --lib bundle --to bundle-${version}"
  },
  "plugins": {
    "../../scripts/release-it/bumper.js": {
      "out": [
        {
          "file": "package.json",
          "path": [
            "peerDependencies.@spartacus/core",
            "peerDependencies.@spartacus/storefront",
            "peerDependencies.@spartacus/schematics"
          ]
        }
      ]
    }
  }
}
